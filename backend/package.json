		"@prisma/client": "^5.22.0",
		"@supabase/supabase-js": "^2.47.10",
		"@types/fs-extra": "^11.0.4",
		"axios": "^1.7.9",
		"bcrypt": "^5.1.1",
		"bcryptjs": "^2.4.3",
		"bunyan": "^1.8.15",
		"convex": "^1.17.4",
		"fs-extra": "^11.2.0",
		"hono": "^4.6.16",
		"ioredis": "^5.4.1",
		"jsonwebtoken": "^9.0.2",
		"langchain": "^0.3.11",
		"node-fetch": "^3.3.2",
