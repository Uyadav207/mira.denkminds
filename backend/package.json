{
	"name": "backend",
	"scripts": {
		"start": "bun run src/index.ts",
		"dev": "bun run --watch src/index.ts",
		"prepare": "husky",
		"check": "biome check ./src",
		"check:fix": "biome check --write ./src",
		"setup:prisma": "cd src && npx prisma generate && npx prisma migrate deploy",
		"start:prod": "npm run setup:prisma && bun run src/index.ts"
	},
	"dependencies": {
		"@huggingface/inference": "^2.8.1",
		"@prisma/client": "^5.22.0",
		"bcrypt": "^5.1.1",
		"bcryptjs": "^2.4.3",
		"bunyan": "^1.8.15",
		"hono": "^4.6.12",
		"ioredis": "^5.4.1",
		"jsonwebtoken": "^9.0.2",
		"node-fetch": "^3.3.2",
		"nodemailer": "^6.9.16",
		"prisma": "^5.22.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bcrypt": "^5.0.2",
		"@types/bcryptjs": "^2.4.6",
		"@types/bun": "latest",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/nodemailer": "^6.4.17",
		"husky": "^9.1.7"
	}
}
